@model Telerik.Sitefinity.Frontend.Mvc.Helpers.ViewModels.Fields.RelatedDataFieldViewModel

@using Telerik.Sitefinity.Model;
@using Telerik.Sitefinity.Pages.Model;

<div>
    @if (!Model.FieldTitle.IsNullOrEmpty())
    {
    <strong>@Model.FieldTitle:</strong>
    }

    <a @(((Model.SingleRelatedItem != null) && ((PageNode)Model.SingleRelatedItem).OpenNewWindow) ? "target='_blank'" : "") href='@Telerik.Sitefinity.RelatedData.RelatedDataExtensions.GetDefaultUrl(Model.SingleRelatedItem)'>@(((IDynamicFieldsContainer)Model.SingleRelatedItem).GetValue(Model.IdentifierField))</a>
</div>